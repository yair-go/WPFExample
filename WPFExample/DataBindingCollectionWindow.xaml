<Window x:Class="WPFExample.DataBindingCollectionWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="DataBindingCollectionWindow" Height="300" Width="300">
    <Grid>
        <StackPanel x:Name="listByMyData">
            <ListBox ItemsSource="{Binding}" />
            <Button Content="Add"
            Click="addButton_Click" />
        </StackPanel>
    </Grid>
</Window>
